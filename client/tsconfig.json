{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
